{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Clusters": {
      "user": {
        "Destinations": {
          "userService": { "Address": "https://localhost:5001" }
        }
      },
      "product": {
        "Destinations": {
          "productService": { "Address": "https://localhost:5002" }
        }
      }
    },
    "Routes": [
      {
        //"RouteId": "userRoute",
        "ClusterId": "user",
        "Match": { "Path": "/api/user/{**catch-all}" }
      },
      {
        //"RouteId": "productRoute",
        "ClusterId": "product",
        "Match": { "Path": "/api/product/{**catch-all}" }
      }
    ]
  }
}
